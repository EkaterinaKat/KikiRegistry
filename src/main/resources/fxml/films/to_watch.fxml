<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx">

    <top>
        <HBox>
            <BorderPane.margin>
                <Insets bottom="15" left="30" right="15" top="15"/>
            </BorderPane.margin>
            <Button text="Add Film" fx:id="addFilmButton"/>
            <Pane minWidth="30" maxWidth="30"/>
        </HBox>
    </top>

    <center>
        <ScrollPane prefWidth="1300" minHeight="800" maxHeight="800">
            <VBox>
                <Pane minHeight="30" maxHeight="30"/>
                <HBox>
                    <Pane minWidth="30" maxWidth="30"/>
                    <VBox fx:id="contentPane"/>
                </HBox>
            </VBox>
        </ScrollPane>

    </center>

    <left>
        <Pane minWidth="30" maxWidth="30"/>
    </left>

    <right>
        <Pane minWidth="30" maxWidth="30"/>
    </right>


</BorderPane>
