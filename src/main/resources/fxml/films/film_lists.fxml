<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx">

    <top>
        <HBox>
            <BorderPane.margin>
                <Insets bottom="15" left="30" right="15" top="15"/>
            </BorderPane.margin>
            <TextField fx:id="searchTextField" prefWidth="300"/>
            <Pane minWidth="7" maxWidth="7"/>
            <Button text="x" fx:id="clearButton"/>
        </HBox>
    </top>

    <center>
        <HBox fx:id="filmsPane"/>
    </center>

    <left>
        <Pane minWidth="30" maxWidth="30"/>
    </left>

    <right>
        <Pane minWidth="30" maxWidth="30"/>
    </right>

    <bottom>
        <Pane minHeight="30" maxHeight="30"/>
    </bottom>

</BorderPane>