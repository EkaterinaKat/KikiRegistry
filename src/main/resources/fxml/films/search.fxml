<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx">

    <Pane minHeight="30" maxHeight="30"/>

    <HBox>
        <Pane minWidth="30" maxWidth="30"/>
        <TextField fx:id="searchTextField" prefWidth="300"/>
        <Pane minWidth="15" maxWidth="15"/>
        <Button fx:id="searchButton" text="Search"/>
    </HBox>

    <ScrollPane prefWidth="1260" minHeight="1260" maxHeight="800">
        <HBox>
            <Pane minWidth="30" maxWidth="30"/>
            <Pane fx:id="contentPane" minWidth="1200" maxWidth="1200"/>
        </HBox>
    </ScrollPane>

</VBox>
